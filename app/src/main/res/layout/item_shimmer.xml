<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen12"
    android:layout_marginTop="@dimen/dimen8"
    android:layout_marginEnd="@dimen/dimen12"
    android:padding="@dimen/dimen4"
    app:cardCornerRadius="@dimen/dimen8"
    app:cardElevation="@dimen/dimen12"
    app:cardMaxElevation="@dimen/dimen16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/dimen4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/view_circular"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:layout_marginStart="@dimen/dimen8"
            android:layout_marginTop="@dimen/dimen8"
            android:layout_marginBottom="@dimen/dimen8"
            android:background="@drawable/shimmer_circular_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_rectangle_1"
            android:layout_width="@dimen/dimen150"
            android:layout_height="@dimen/dimen12"
            android:layout_marginStart="@dimen/dimen4"
            android:layout_marginTop="@dimen/dimen4"
            android:background="@drawable/shimmer_rectangular_view"
            app:layout_constraintStart_toEndOf="@+id/view_circular"
            app:layout_constraintTop_toTopOf="@+id/view_circular" />

        <View
            android:id="@+id/view_rectangle_2"
            android:layout_width="@dimen/dimen120"
            android:layout_height="@dimen/dimen12"
            android:layout_marginTop="@dimen/dimen4"
            android:background="@drawable/shimmer_rectangular_view"
            app:layout_constraintStart_toStartOf="@+id/view_rectangle_1"
            app:layout_constraintTop_toBottomOf="@+id/view_rectangle_1" />

        <View
            android:id="@+id/view_rectangle_3"
            android:layout_width="@dimen/dimen80"
            android:layout_height="@dimen/dimen12"
            android:layout_marginEnd="@dimen/dimen8"
            android:background="@drawable/shimmer_rectangular_view"
            app:layout_constraintBottom_toBottomOf="@+id/view_rectangle_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_rectangle_1" />

        <View
            android:id="@+id/view_rectangle_4"
            android:layout_width="@dimen/dimen64"
            android:layout_height="@dimen/dimen12"
            android:layout_marginTop="@dimen/dimen4"
            android:background="@drawable/shimmer_rectangular_view"
            app:layout_constraintEnd_toEndOf="@+id/view_rectangle_3"
            app:layout_constraintTop_toBottomOf="@+id/view_rectangle_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>